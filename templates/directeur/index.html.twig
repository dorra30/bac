{% extends 'base.html.twig' %}

{% block title %}Directeur index{% endblock %}

{% block body %}
    <h1>Directeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Login</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for directeur in directeurs %}
            <tr>
                <td>{{ directeur.id }}</td>
                <td>{{ directeur.nom }}</td>
                <td>{{ directeur.login }}</td>
                <td>{{ directeur.mdp }}</td>
                <td>
                    <a href="{{ path('app_directeur_show', {'id': directeur.id}) }}">show</a>
                    <a href="{{ path('app_directeur_edit', {'id': directeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_directeur_new') }}">Create new</a>
{% endblock %}
