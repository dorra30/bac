{% extends 'base.html.twig' %}

{% block title %}Specialite index{% endblock %}

{% block body %}
    <h1>Specialite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nbre_essai</th>
                <th>Type</th>
                <th>Choix1</th>
                <th>Choix2</th>
                <th>Choix3</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.nom }}</td>
                <td>{{ specialite.nbreEssai }}</td>
                <td>{{ specialite.type }}</td>
                <td>{{ specialite.choix1 }}</td>
                <td>{{ specialite.choix2 }}</td>
                <td>{{ specialite.choix3 }}</td>
                <td>
                    <a href="{{ path('app_specialite_show', {'id': specialite.id}) }}">show</a>
                    <a href="{{ path('app_specialite_edit', {'id': specialite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_specialite_new') }}">Create new</a>
{% endblock %}
