{% extends 'base.html.twig' %}

{% block title %}Coordinateur index{% endblock %}

{% block body %}
    <h1>Coordinateur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Login</th>
                <th>Mdp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coordinateur in coordinateurs %}
            <tr>
                <td>{{ coordinateur.id }}</td>
                <td>{{ coordinateur.nom }}</td>
                <td>{{ coordinateur.login }}</td>
                <td>{{ coordinateur.mdp }}</td>
                <td>
                    <a href="{{ path('app_coordinateur_show', {'id': coordinateur.id}) }}">show</a>
                    <a href="{{ path('app_coordinateur_edit', {'id': coordinateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coordinateur_new') }}">Create new</a>
{% endblock %}
